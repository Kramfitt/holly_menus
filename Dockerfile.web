# Use Python base image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive \
    TESSERACT_PATH=/usr/bin/tesseract

# Install system dependencies and Tesseract
RUN apt-get update && \
    apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-eng \
    libtesseract-dev \
    libleptonica-dev \
    poppler-utils \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Verify Tesseract installation
RUN echo "Verifying Tesseract installation..." && \
    tesseract --version && \
    tesseract --list-langs && \
    echo "Tesseract verified successfully"

# Set working directory
WORKDIR /app

# Copy requirements first to leverage Docker cache
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY . .

# Copy test script for verification
COPY test_tesseract.py .

# Final verification with Python
RUN echo "Testing Tesseract with Python..." && \
    python test_tesseract.py

# Command to run the web server
CMD ["gunicorn", "app:app"] 